@model DevFolio.Models.TblProject
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Güncelleme Sayfası</h2>

<form method="post">
	@Html.HiddenFor(x => x.ProjectID)
	@Html.HiddenFor(x => x.CreatedDate)
	<label>Başlık</label>
	@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
	<br />
	<label>Kategorisi</label>
	@Html.DropDownListFor(m => m.TblCategory.CategoryID, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
	<br />
	<label>Proje Resmi</label>
	@Html.TextBoxFor(x=>x.CoverImageUrl, new {@class="form-control"})
	<br />
	<button class="btn btn-primary">Proje Güncelle</button>
</form>

