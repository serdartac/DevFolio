@model List<DevFolio.Models.TblTestimonial>
@{
	ViewBag.Title = "TestimonialList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Referanslar Listesi</h2>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Adı Soyadı</th>
		<th>Açıklama</th>
		<th>Resim</th>
		<th>Durum</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		string durum = "";
		if (item.Status == false)
		{
			durum = "bg-danger";
		}
		else
		{
			durum = "bg-secondary";
		}
<tr>
	<td>@item.TestimonialId</td>
	<td>@item.NameSurname</td>
	<td>@item.Description</td>
	<td>@item.ImageUrl</td>
	<td><a href="/Testimonial/StatusChangeTestimonial/@item.TestimonialId"> <span class="badge @durum" style="color:white">@item.Status</span></a></td>
	<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
	<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
</tr>
	}
</table>
<a href="/Testimonial/CreateTestimonial/" class="btn btn-info">Yeni Referans Ekle</a>