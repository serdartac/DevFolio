@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>

<form method="post">
	@Html.HiddenFor(x => x.TestimonialId, new { @class = "form-control" })
	<br />
	<label>Adı Soyadı</label>
	@Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
	<br />
	<label>Açıklama</label>
	@Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
	<br />
	<label>Resim Adresi</label>
	@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
	<br />
	<button class="btn btn-success">Referansı Güncelle</button>
</form>