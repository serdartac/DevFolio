@model List<DevFolio.Models.TblAddress>
@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Konum</th>
        <th>Tel No</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
	{
        <tr>
            <td>@item.AddressId</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td><a href="/Address/DeleteAddress/@item.AddressId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Address/UpdateAddress/@item.AddressId" class="btn btn-success">Güncelle</a></td>
        </tr>
	}
</table>
<a href="/Address/CreateAddress/" class="btn btn-info">Yeni Adres Ekle</a>