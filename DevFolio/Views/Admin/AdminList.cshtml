@model List<DevFolio.Models.TblAdmin>
@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yöneticiler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
	{
        <tr>
            <td>@item.AdminId</td>
            <td>@item.Username</td>
            <td>@item.Password</td>
            <td><a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/UpdateAdmin/@item.AdminId" class="btn btn-success">Güncelle</a></td>
        </tr>
	}
</table>
<a href="/Admin/CreateAdmin/" class="btn btn-info">Yeni Yönetici Ekle</a>
