@model DevFolio.Models.TblProfile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Güncelleme Sayfası</h2>

<form method="post">
	<label>Profile ID</label>
	@Html.TextBoxFor(x => x.ProfileID, new { @class = "form-control" })
	<br />
	<label>Ad Soyad</label>
	@Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
	<br />
	<label>Başlık</label>
	@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
	<br />
	<label>Email</label>
	@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
	<br />
	<label>Telefon</label>
	@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
	<br />
	<button class="btn btn-primary">Profil Güncelle</button>
</form>
