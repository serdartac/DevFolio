@model List<DevFolio.Models.TblService>
@{
	ViewBag.Title = "ServiceList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Hizmetler</th>
		<th>Resim</th>
		<th>Açıklama</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ServiceID</td>
			<td>@item.ServiceTitle</td>
			<td>@item.ServiceImageUrl</td>
			<td>@item.Description</td>
			<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
			<td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
		</tr>
	}
</table>
<a href="/Service/CreateService/" class="btn btn-info">Yeni Hizmet Oluştur</a>